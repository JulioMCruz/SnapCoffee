# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,https://snapcoffee.xyz,https://codalabs.ngrok.io

# Blockchain Configuration
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Smart Contract Addresses (Base Network)
LOYALTY_TOKEN_ADDRESS=
COUPON_NFT_ADDRESS=
SNAP_REGISTRY_ADDRESS=

# CDP (Coinbase Developer Platform)
CDP_API_KEY=your_cdp_api_key_here
CDP_API_SECRET=your_cdp_api_secret_here
CDP_WALLET_ID=your_cdp_wallet_id_here

# Farcaster Integration
FARCASTER_WEBHOOK_SECRET=your_farcaster_webhook_secret
FARCASTER_API_KEY=your_farcaster_api_key

# AI/Image Processing
OPENAI_API_KEY=your_openai_api_key
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=snap-coffee-images

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Database (PostgreSQL - for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/snapcoffee

# Security
JWT_SECRET=your_super_secret_jwt_key
WEBHOOK_SECRET=your_webhook_secret_key

# App Configuration
APP_URL=https://snapcoffee.xyz

# Feature Flags
FEATURE_AI_VALIDATION=true
FEATURE_AUTO_REWARDS=true
FEATURE_ONRAMP_INTEGRATION=false
FEATURE_ANALYTICS=true

# Reward Configuration
REWARD_COFFEE_SNAP=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined